#:import PanelButton widgets.icon_buttons
#:import styles assets.styles

<MainScreen>:
    title: 'Главный'

    BoxLayout:
        size_hint: 1, 0.79
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: 7
        spacing: 7

        RelativeLayout:
            size_hint: 1, .45

            TextInput:
                id: input
                hint_text: 'Введите текст и нажмите \n"Далее"'
                font_size: styles.H1
                padding: 10, 10, 27, 10
                multiline: True
                size_hint: 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            PanelButton:
                size: 20, 20
                size_hint: None, None
                pos_hint: {'right': 0.99, 'top': 0.96}
                text: "\uf00d"
                on_press: input.text = output_view.text = ''

            PanelButton:
                size: 20, 20
                size_hint: None, None
                pos_hint: {'right': 0.99, 'center_y': 0.5}
                text: "\uf061"
                on_press: root.translate_text()

        ScrollView:

            BoxLayout:
                height: output_view.height
                size_hint_y: None

                Label:
                    id: output_view
                    size_hint: 0.9, None
                    text: ''
                    font_size: styles.H1
                    padding: 5, 5
                    halign: 'justify'
                    color: styles.BLACK
                    text_size: self.width, None
                    height: self.texture_size[1]

                PanelButton:
                    size_hint: 0.1, 1
                    height: 20
                    opacity: 1 if output_view.text else 0
                    text: "\uf097"
                    on_press: root.on_save_translation()
