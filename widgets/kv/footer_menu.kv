#:import FooterMenuButton widgets.icon_buttons
#:import styles assets.styles

<FooterMenu>
    size_hint: 1, 0.12
    pos_hint: {'center_x': 0.5, 'center_y': 0.06}

    # a separator
    Widget:
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        canvas:
            Color:
                rgb: styles.DARK_GREY
            Rectangle:
                pos: 0, self.center_y
                size: self.width, 2

    BoxLayout:
        size_hint: 1, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.47}

        FooterMenuButton:
            text: "\uf1ab"
            on_press: root.switch_screen('main')

        FooterMenuButton:
            text: "\uf097"
            on_press: root.switch_screen('favourites')

        FooterMenuButton:
            text: "\uf05a"
            on_press: root.switch_screen('about')
